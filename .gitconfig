[user]
    name = Andrew Wong
    email = wongadev@gmail.com
[core]
    attributesfile = ~/.gitattributes_global
    excludesfile = ~/.gitignore_global
    editor = vim
[color]
    ui = true
[color "branch"]
    current = green bold
    remote = red bold
[color "diff"]
    meta = yellow bold
    commit = green bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "status"]
    added = green bold
    changed = red bold
    untracked = red bold
[github]
    user = w0ng
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[alias]
    l = log --pretty=format:'%C(yellow)%h%C(magenta)%d%C(reset) %s %C(cyan)%cN %C(blue)(%cd)%C(reset)' --date=format:'%a %F %R' --graph --use-mailmap
    s = status -sb
[push]
    default = simple
[merge]
    tool = vimdiff
[mergetool]
    keepBackup = false
[mailmap]
    file = ~/.mailmap
[pager]
	diff = diff-so-fancy | less --tabs=4 -RFX
	show = diff-so-fancy | less --tabs=4 -RFX
